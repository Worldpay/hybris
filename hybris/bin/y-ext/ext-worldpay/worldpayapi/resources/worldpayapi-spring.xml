                        <property name="worldpayBillingInfoAddressConverter" ref="worldpayBillingInfoAddressConverter"/>
                        <property name="worldpayDynamicInteractionResolverService" ref="worldpayDynamicInteractionResolverService"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

