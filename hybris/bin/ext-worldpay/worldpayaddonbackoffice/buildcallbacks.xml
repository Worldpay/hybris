--><project name="worldpayaddonbackoffice_buildcallbacks">
	<property name="worldpayaddonbackofficeWebFragmentSrc" value="${ext.worldpayaddonbackoffice.path}/resources/web-fragment.xml"/>
	<property name="worldpayaddonbackofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_worldpayaddonbackoffice.jar"/>

	

	

	<macrodef name="worldpayaddonbackoffice_after_clean">
		<sequential>
			<worldpayaddonbackoffice_remove_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="worldpayaddonbackoffice_after_build">
		<sequential>
			<worldpayaddonbackoffice_remove_web_fragment/>
			<worldpayaddonbackoffice_create_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="worldpayaddonbackoffice_remove_web_fragment">
		<sequential>
			<if>
				<available file="${worldpayaddonbackofficeWebFragmentDestJar}"/>
				<then>
					<delete file="${worldpayaddonbackofficeWebFragmentDestJar}"/>
				</then>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="worldpayaddonbackoffice_create_web_fragment">
		<sequential>
			<if>
				<available file="${worldpayaddonbackofficeWebFragmentSrc}"/>
				<then>
					<sequential>
						<jar destfile="${worldpayaddonbackofficeWebFragmentDestJar}">
							<metainf file="${worldpayaddonbackofficeWebFragmentSrc}"/>
						</jar>
					</sequential>
				</then>
			</if>
		</sequential>
	</macrodef>
</project>
